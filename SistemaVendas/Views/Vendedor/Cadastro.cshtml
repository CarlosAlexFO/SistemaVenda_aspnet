
@model VendedorModel
@{
    ViewData["Title"] = "Cadastro de VendedorModel";
}


<h2>@ViewData["Title"]</h2>

<br />
<form asp-controller="Vendedor" asp-action="Cadastro">
    <input type="hidden" asp-for="Id" value="@try { @ViewBag.Vendedor.Id } catch { }" />
    <div class="form-group">
        <label>Nome</label>
        <input asp-for="Nome" type="text" class="form-control" value="@try { @ViewBag.Vendedor.Nome } catch { }" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Email</label>
        <input asp-for="Email" type="text" class="form-control" value="@try { @ViewBag.Vendedor.Email } catch { }" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Cadastrar" class="btn btn-success" />
        <a asp-action="Index" button class="btn btn-info">Voltar a Lista</a>
    </div>

</form>
